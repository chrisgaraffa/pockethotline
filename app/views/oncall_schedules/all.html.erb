<h1>Schedules</h1>

<% days = %w(Mondays Tuesdays Wednesdays Thursdays Fridays Saturdays Sundays) %>

<table class="table">
  <tbody style="">
    <% days.each_with_index do |day, i| %>
      <tr style="border:none;">
        <% i += 1 %>
        <td style=""><strong><%= day %></strong></td>
        <% OncallSchedule.joins(:user).where('user_id is not null and users.deleted_at is null').where(:wday => i).order(:start_time).each do |schedule| %>
          <td style="">
            <%= link_to schedule.user.name, user_oncall_schedules_path(schedule.user) %>
            <%= schedule.to_abbrev %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>