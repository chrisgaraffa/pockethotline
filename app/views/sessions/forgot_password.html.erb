<%= form_tag(request_password_reset_path, :class => 'col-sm-4 offset-sm-4 mt-5' ) do %>

  <h1>Forgot your password?</h1>
  <p>Don't worry, it happens to the best of us.</p>

  <p>We'll email you instructions to reset your password.</p>

  <div class="form-floating mb-3">
    <%= text_field_tag :email, nil, { :type => 'email', :class => 'form-control', 'placeholder' => 'you@domain.com', :required => 'required' } %>
    <%= label_tag :email %>
  </div>

  <div class="form-actions">
    <%= submit_tag 'Request Password Reset', :class => 'btn btn-primary' %>
  </div>
<% end %>