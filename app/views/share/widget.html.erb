<div class="row">
  <div class="col">
    <div class="clearfix widget">
      <h3>Share</h3>
    </div>

    <div class="row">
      <div class="col">
        <div style="margin-bottom:20px">
          <script src="<%= url_for(widget_url(:format => :js)) %>" type="text/javascript"></script>
          <div id="pockethotline"></div>
        </div>
      </div>
    </div>

    <form>
      <div class="mb-3">
        <label>Copy and paste the code below to insert on your site:</label>
        <textarea id="widget-code" readonly class="form-control readonly disabled"><script src="<%= url_for(widget_url(:format => :js)) %>" type="text/javascript"></script><div id="pockethotline"></div></textarea>
      </div>
    </form>
  </div>
</div>
<script type="text/javascript">
$("#widget-code").focus(function() {
    $this = $(this);
    $this.select();

    // Work around Chrome's little problem
    $this.mouseup(function() {
        // Prevent further mouseup intervention
        $this.unbind("mouseup");
        return false;
    });
});
</script>