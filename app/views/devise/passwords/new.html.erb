<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'devise-form clearfix' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2>Forgot your password?</h2>

  <div id="devise-form-fields-container" class="mb-3">
    <div class="field mb-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control', :required => true %>
    </div>

    <div class="actions mb-2">
      <%= f.submit "Send password reset instructions", :class => 'btn btn-primary w-100' %>
    </div>
  </div>

  <%= render "devise/shared/links" %>
<% end %>

